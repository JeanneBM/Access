var glupiTekst = "hEj TAM, cO Ty WYprAwiASZ?";
var tekstMaleLitery = glupiTekst.toLowerCase();
var pierwszyZnak = tekstMaleLitery[0];
var pierwszyZnakWielkaLitera = pierwszyZnak.toUpperCase();
var resztaTekstu = tekstMaleLitery.slice(1);
pierwszyZnakWielkaLitera + resztaTekstu;
// "Hej tam, co ty wyprawiasz?"

